public class KlientDAOImp implements KlientDAO{

	static Connection con;
	
	static{
		com.mysql.jdbc.jdbc2.optional.MysqlDataSource ds = new com.mysql.jdbc.jdbc2.optional.MysqlDataSource();
		ds.setUser("root");
